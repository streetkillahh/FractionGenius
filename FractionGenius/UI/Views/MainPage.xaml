<Page x:Class="FractionGenius.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FractionGenius.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50px"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <!-- Body -->
        <Grid Grid.Row="1">
            <StackPanel HorizontalAlignment="Center" 
            Width="200px" Margin="25px">
                <Button Content="Сложение" 
            Click="Button_Click"
            Style="{StaticResource OriginalButtonStyle}"/>
                <Button Content="Вычитание" 
            Click="Button_Click"
            Style="{StaticResource OriginalButtonStyle}"/>
                <Button Content="Умножение" 
            Click="Button_Click"
            Style="{StaticResource OriginalButtonStyle}"/>
                <Button Content="Деление" 
            Click="Button_Click"
            Style="{StaticResource OriginalButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
