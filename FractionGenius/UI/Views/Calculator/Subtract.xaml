<Page x:Class="FractionGenius.UI.Views.Calculator.Subtract"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FractionGenius.UI.Views.Calculator"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="Subtract">

    <Grid>
        <StackPanel>
            <TextBox Text="{Binding Numerator1}" Width="100" Margin="5" ToolTip="Числитель 1"/>
            <TextBox Text="{Binding Denominator1}" Width="100" Margin="5" ToolTip="Знаменатель 1"/>
            <TextBox Text="{Binding Numerator2}" Width="100" Margin="5" ToolTip="Числитель 2"/>
            <TextBox Text="{Binding Denominator2}" Width="100" Margin="5" ToolTip="Знаменатель 2"/>
            <Button Content="Вычесть" Command="{Binding AddCommand}" Width="100" Margin="5"/>
            <TextBlock Text="{Binding Result}" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
