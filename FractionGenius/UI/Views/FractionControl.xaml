<UserControl x:Class="FractionGenius.UI.Views.FractionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="NumeratorTextBlock" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" FontSize="24" FontWeight="Bold"/>
        <Separator Grid.Row="1" HorizontalAlignment="Stretch" Background="Black" Height="2"/>
        <TextBlock x:Name="DenominatorTextBlock" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" FontSize="24" FontWeight="Bold"/>
    </Grid>
</UserControl>
